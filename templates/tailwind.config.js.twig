const CONSOLE_COLORS = {
  green: '\x1b[32m',
  red: '\x1b[31m',
  yellow: '\x1b[33m',
  bold: '\x1b[1m',
  reset: '\x1b[0m',
};

const displayMsg = (msg, color = CONSOLE_COLORS.green, bold = false) => console.log(`${color}${bold ? CONSOLE_COLORS.bold : ''}${msg}${CONSOLE_COLORS.reset}`);

const presets = [
  {% for preset in presets %}
  require('{{ preset|raw }}'),
  {% endfor %}
];

{% for preset in presets %}
    displayMsg('! [INFO] Found custom config at {{ preset }}');
{% endfor %}


const files = [
    {% for file in files %}
    '{{ file|raw }}',
    {% endfor %}
];

{% for file in files %}
    displayMsg('! [INFO] Files in {{ file}} folder would be scaned for class generation.');
{% endfor %}

module.exports = {
  content: {
    files,
  },
  presets,
};
